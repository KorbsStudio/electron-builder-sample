{
  "name": "electron-builder-sample",
  "version": "1.0.0",
  "description": "Basic structure for your first Electron application.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build -p always"
  },
  "author": "KorbsStudio",
  "devDependencies": {
    "electron": "^13.1.1",
    "electron-builder": "^22.10.5"
  },
  "build": {
    "appId": "com.example.app",
    "win": {
      "target": "nsis",
      "icon": "build/icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icons/icon.icns",
      "sign": false,
      "title": "Electron Sample",
      "background": "build/background.png",
      "iconSize": "80",
      "iconTextSize": "12"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icons/icon.png",
      "category": "Network",
      "synopsis": "A very short description, like a slogan",
      "description": "A description of the application, what it does, and how it works."
    },
    "nsis": {
      "deleteAppDataOnUninstall": true,
      "shortcutName": "Electron Sample",
      "oneClick": true,
      "runAfterFinish": true,
      "createStartMenuShortcut": true,
      "createDesktopShortcut": false
    },
    "publish": [
      {
        "provider": "github",
        "owner": "KorbsStudio",
        "repo": "electron-builder-sample",
        "releaseType": "draft"
      }
    ]
  }
}
